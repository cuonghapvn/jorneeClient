<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvIplaceNameLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How do you call this place?" />

    <EditText
        android:id="@+id/tvIplaceName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <TextView
        android:id="@+id/tvCategoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What kind is this place?" />

    <Spinner
        android:id="@+id/snCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/iplace_categories"
        android:prompt="@string/share_interesting_place_category_prompt" />

