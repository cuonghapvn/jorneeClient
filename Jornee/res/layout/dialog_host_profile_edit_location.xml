<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Location :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <AutoCompleteTextView
        android:id="@+id/hostProfileEditLocationAutocompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:ems="5"
        android:textColor="#000000" >

        <requestFocus />
    </AutoCompleteTextView>

    <EditText
        android:id="@+id/hostProfileEditLocationAboutPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:ems="2"
        android:inputType="textMultiLine"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hostProfileEditLocationAutocompleteTextView"
        android:text="About this place"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/hostProfileEditLocationBtnCancel"
        style="@style/jorneeStyle.text.medium"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/hostProfileEditLocationBtnSubmit"
        android:layout_alignBottom="@+id/hostProfileEditLocationBtnSubmit"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/hostProfileEditLocationBtnSubmit"
        android:background="@drawable/btn_red_button"
        android:gravity="center"
        android:singleLine="true"
        android:text="Cancel"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/hostProfileEditLocationBtnSubmit"
        style="@style/jorneeStyle.text.medium"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hostProfileEditLocationAboutPlace"
        android:layout_marginLeft="50dp"
        android:background="@drawable/btn_blue_button"
        android:gravity="center"
        android:singleLine="true"
        android:text="Submit"
        android:textColor="#ffffff" />

</RelativeLayout>
